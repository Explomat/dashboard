.task {
    position: relative;
    padding: 6px;
    font-size: 14px;
    margin-bottom: 2px;
    border-bottom: 1px solid #ccc;
    background-color: #fbfbfb;

    &:last-child {
        border-bottom: none;
    }

    &__name {

    }
    &__body {
        .task__start-usage-date {
            font-size: 11px;
        }
        .task__last-usage-date {
            font-size: 11px;
        }
        .task__status-title {
            float: right;
            font-size: 11px;
            
            &--without-date{
                position: absolute;
                top: 50%;
                right: 8px;
                transform: translateY(-50%);
                float: initial;
            }

            &--0 {
                color: #64B5F6;
            }
            &--1 {
                color: #ff9800;
            }
            &--2 {
                color: #9e9e9e;
            }
            &--3 {
                color: #f44336;
            }
            &--4 {
                color: #4caf50;
            }
            &--5 {
                color: #9e9e9e;
            }
            &--6 {
                color: #9e9e9e;
            }
        }
    }
}
